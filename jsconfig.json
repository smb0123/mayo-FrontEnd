{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/icons/*": ["public/icons/*"],
      "@/images/*": ["public/images/*"]
    },
    "checkJs": true,
    "allowJs": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.js", "**/*.jsx", "src/declaration.d.ts"],
  "exclude": ["node_modules"]
}
